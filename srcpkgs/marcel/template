# Template file for 'marcel'
pkgname=marcel
version=0.18.3
revision=1
build_style=python3-module
hostmakedepends="python3-setuptools"
depends="python3-dill python3-psutil"
short_desc="Marcel is a shell that pipes Python values between commands"
maintainer="savoy <git@liberation.red>"
license="GPL-3.0-or-later"
homepage="https://github.com/geophile/marcel"
distfiles="https://github.com/geophile/marcel/archive/refs/tags/v${version}.tar.gz"
checksum=b07f1a8401b3f6f9c08573bf08e8334dac35c5046425a83791d7d611619a62a3

do_install() {
	vinstall bin/marcel 644 usr/bin/
	vinstall bin/farcel.py 644 usr/bin/

	vmkdir usr/lib/python${py3_ver}/site-packages/marcel/
	vcopy marcel/* usr/lib/python${py3_ver}/site-packages/marcel/
}
